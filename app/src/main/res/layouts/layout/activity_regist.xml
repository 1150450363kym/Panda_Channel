<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_regist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="comuxi.example.administrator.panda_channel.RegistActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/regist_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/personal_back_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/regist"
                android:textColor="#fff"
                android:textSize="18dp" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.design.widget.TabLayout
        android:id="@+id/regist_tablayout"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="132px"
        android:layout_marginTop="1px">

    </android.support.design.widget.TabLayout>

    <comuxi.example.administrator.panda_channel.moudel.Panda_Live.NonSwipeableViewPager
        android:layout_below="@id/regist_tablayout"
        android:id="@+id/framelayout_register_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></comuxi.example.administrator.panda_channel.moudel.Panda_Live.NonSwipeableViewPager>

</RelativeLayout>
