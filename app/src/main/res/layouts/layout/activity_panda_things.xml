<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_panda_things"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/radio_hui"
    tools:context="moudel.GG_TV.PandaThingsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/historical_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/personal_back_img" />

            <TextView
                android:id="@+id/gg_totop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:textColor="#fff"
                android:textSize="18dp" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:background="@mipmap/_tw"
        android:layout_width="match_parent"
        android:layout_height="180dp"></LinearLayout>

    <TextView
        android:background="@color/radio_bai"
        android:textSize="18dp"
        android:textColor="@color/radio_black"
        android:text="@string/Premiere_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:background="@color/radio_bai"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:text="栏目介绍"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <CheckBox

            android:layout_centerInParent="true"
            android:button="@null"
            android:id="@+id/live_center_blue_img"
            android:background="@drawable/live_tooltip_blue_select"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </RelativeLayout>


    <TextView
        android:background="@color/radio_bai"
        android:id="@+id/panda_things_tv_pandacolumn"
        android:visibility="gone"

        android:text="熊猫频道栏目"
        android:textColor="@color/radio_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView


        android:text="高清完整"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:textColor="@color/radio_black"
        android:background="@color/radio_bai"
        android:id="@+id/panda_things_tablayout"
        android:layout_width="340dp"
        android:layout_height="wrap_content">

    </TextView>

    <com.androidkun.PullToRefreshRecyclerView
        android:layout_gravity="center_horizontal"
        android:background="@color/radio_bai"
        android:id="@+id/panda_things_pullto"
        android:layout_width="340dp"
        android:layout_height="260dp"></com.androidkun.PullToRefreshRecyclerView>
    <LinearLayout
        android:background="@color/radio_litterwhite"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_gravity="center_vertical"
          android:layout_marginLeft="130dp"
            android:background="@mipmap/personal_shoucang_img"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/img_share"
            android:layout_gravity="center_vertical"
           android:layout_marginLeft="35dp"
            android:background="@mipmap/share"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

</LinearLayout>
