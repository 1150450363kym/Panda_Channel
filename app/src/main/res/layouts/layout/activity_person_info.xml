<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_person_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="comuxi.example.administrator.panda_channel.activity.PersonInfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/info_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/personal_back_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="个人信息"
                android:textColor="#fff"
                android:textSize="18dp" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/radio_bai"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:orientation="horizontal" >

       <TextView
           android:text="头像"
           android:layout_marginLeft="20dp"
           android:textSize="18dp"
           android:layout_centerVertical="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/info_imageheader"
            android:layout_centerVertical="true"
            android:layout_marginLeft="270dp"
            android:src="@mipmap/umeng_socialize_default_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/image_tophoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/personal_enter_img" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@color/radio_bai"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_info_username"
            android:text="----------"
            android:layout_marginLeft="200dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_toname"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/personal_enter_img" />
    </RelativeLayout>

    <TextView

        android:id="@+id/btn_dropout"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="380px"
        android:background="@drawable/pe_login_view_bg"
        android:gravity="center"
        android:padding="30px"
        android:text="退出登录"
        android:textColor="@color/radio_bai" />

</LinearLayout>
