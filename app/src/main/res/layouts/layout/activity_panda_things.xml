<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_panda_things"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="moudel.GG_TV.PandaThingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"></LinearLayout>

    <TextView
        android:textSize="18dp"
        android:textColor="@color/radio_black"
        android:layout_marginLeft="10dp"
        android:text="@string/Premiere_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:text="栏目介绍"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <CheckBox

            android:layout_centerInParent="true"
            android:button="@null"
            android:id="@+id/live_center_blue_img"
            android:background="@drawable/live_tooltip_blue_select"
            android:layout_width="15dp"
            android:layout_height="10dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/panda_things_tv_pandacolumn"
        android:visibility="gone"
        android:text="熊猫频道栏目"
        android:layout_marginLeft="30dp"
        android:textColor="@color/radio_black"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TabLayout

        android:layout_marginTop="20dp"
        android:id="@+id/panda_things_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.TabLayout>

    <moudel.Panda_Live.NonSwipeableViewPager
        android:id="@+id/panda_things_viewpager"
        android:layout_width="match_parent"
        android:layout_height="230dp"></moudel.Panda_Live.NonSwipeableViewPager>

    <LinearLayout
        android:background="@color/radio_litterwhite"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_gravity="center_vertical"
          android:layout_marginLeft="130dp"
            android:background="@mipmap/personal_shoucang_img"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_gravity="center_vertical"
           android:layout_marginLeft="35dp"
            android:background="@mipmap/share"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

</LinearLayout>
