        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="@drawable/diglog_progress">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminateDrawable="@drawable/progressbar_" />


    </RelativeLayout>


</RelativeLayout>
